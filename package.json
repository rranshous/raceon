{
  "name": "raceon",
  "version": "1.0.0",
  "description": "browser-based combat racing game",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:itch": "npm run build && cp -r resources dist/ && rm -f raceon-game.zip && zip -r raceon-game.zip dist/ && echo 'Build complete! raceon-game.zip ready for itch.io upload'",
    "preview": "vite preview",
    "start": "npm run dev"
  },
  "keywords": ["racing", "game", "typescript", "canvas"],
  "author": "Robby and Claude",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "@types/node": "^20.0.0"
  }
}
